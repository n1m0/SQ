@Controller
@RequestMapping("/trans/PersonalCenter")
public class PersonalCenterController {
	
	@Autowired
	private PersonalCenterService personalCenterService;
	/**
	 * 
	* @author 丁振兴 
	* @date 2017年11月7日 下午3:41:59 
