		   <groupId>aliyun-java-sdk-dysmsapi</groupId>
		   <artifactId>aliyun-java-sdk-dysmsapi</artifactId>
		   <version>1.0.0</version>
		   <scope>system</scope>
		   <systemPath>D:/workspace/sqfs/src/main/resources/lib/aliyun-java-sdk-dysmsapi-1.0.0.jar</systemPath>
